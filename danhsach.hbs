<div class="container">
    <div class="col-md-9">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Thêm Sản Phẩm
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm San Pham
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/themsanpham" method="post" enctype="multipart/form-data">
                            <label style="width: 100px;" class=" text-center">
                                <input type="file" name="anh" id="anh" required="Vui long them anh">
                            </label>
                            <div class="form-group">
                                <label for="msp" style="color: white;"> Ma Sản Phẩm </label>
                                <input type="text" name="msp" class="form-control" id="msp" placeholder="Ma Sản Phẩm" required>
                            </div>
                            <div class="form-group">
                                <label for="tensp" style="color: white;"> Tên Sản Phẩm </label>
                                <input type="text" name="tensp" class="form-control" id="tensp" required
                                    placeholder="Tên Sản Phẩm">
                            </div>
                            <div class="form-group">
                                <label for="gia" style="color: white;"> Giá </label>
                                <input type="number" min="0" name="gia" class="form-control" id="gia" placeholder="Giá" required>
                            </div>
                            <div class="form-group">
                                <label for="size" style="color: white;"> Size </label>
                                <input type="number" min="0" name="size" class="form-control" id="size" required
                                    placeholder="Size">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
          <div class="col-md-3">
            <form class="d-flex" role="search" action="/search" method="post">
                <input class="form-control me-2" id="search" type="search" placeholder="Search" aria-label="Search"
                    name="tensp">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th class="col-md-1" scope="col">Stt</th>
                <th class="col-md-2" scope="col">Ten</th>
                <th class="col-md-3" scope="col">Gia</th>
                <th class="col-md-1" scope="col">Anh</th>
                <th class="col-md-1" scope="col">Size</th>
                <th class="col-md-2" scope="col">Chuc nang</th>
            </tr>
        </thead>
        {{#each all}}
        <tbody>
            <tr>
                <th scope="row">{{this.msp}}</th>
                <td>{{this.ten}}</td>
                <td>{{this.gia}}</td>
                <td><img src="./image/{{this.image}}" style="width: 90%;" alt=""></td>
                <td>{{this.size}}</td>
                <td><a href="{{this._id}}/edit/" style="text-decoration: none;"><button type="button"
                            class="btn btn-primary">Sua</button></a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#staticBackdrop">
                        Xoa
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Thong bao</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Ban co muon xoa khong
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                        <a href="{{this._id}}"><button type="button" class="btn btn-primary">Xoa</button></a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <a href="{{this._id}}/chitiet/" style="text-decoration: none;"><button type="button" class="btn btn-primary">Chi
                            tiet</button></a>
                </td>
            </tr>
        </tbody>
        {{/each}}
    </table>
</div>

</div>